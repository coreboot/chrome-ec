/ {
	named-i2c-ports {
		compatible = "named-i2c-ports";

		i2c_ec_i2c_pd_scl_r: ec_i2c_pd_scl_r {
			enum-names = "I2C_PORT_PD";
		};
		i2c_ec_i2c_mi: ec_i2c_mi {
			enum-names = "I2C_PORT_SMB_BS";
		};
		i2c_smb_pch: smb_pch {
			i2c-port = <&i2c4_1>;
			enum-names = "I2C_PORT_SMB_PCH";
		};
	};
};

&i2c_ctrl0 {
	status = "okay";
};

&i2c0_0 {
	label = "I2C_PORT_PD";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c_ctrl2 {
	status = "okay";
};

&i2c2_0 {
	label = "I2C_PORT_SMB_BS";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

&i2c_ctrl4 {
	status = "okay";
};

&i2c4_1 {
	status = "okay";
	pinctrl-0 = <&i2c4_1_sda_scl_gpf2_f3>;
	pinctrl-names = "default";

	label = "I2C_PORT_SMB_PCH";
	clock-frequency = <I2C_BITRATE_STANDARD>;
};

/*
 * Aliases to common names
 */
i2c_smb_bs: &i2c_ec_i2c_mi {};
